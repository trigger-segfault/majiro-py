{
  "comments": {
    // symbol used for single line comment. Remove this entry if your language does not support line comments
    //  double-slash line comment used over ';', as that's better suited for documentation
    //  while '//' is better suited commenting-out instructions
    "lineComment": "//",
    // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
    "blockComment": [ "/*", "*/" ]
  },
  // symbols used as brackets
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["(", ")"],
    ["[", "]"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    ["<", ">"],
    ["{", "}"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  // behavior for foldable blocks of code
  "folding": {
    // fold based on change in indentation (which is increased inside functions -> labels -> instructions)
    "offSide": true
  }
}